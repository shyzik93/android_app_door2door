<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    >
    <LinearLayout
        android:id="@+id/layout_house_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="18dp"
        android:onClick="onOpenReactionBtn"
        android:background="#0011aa">

        <TextView
            android:id="@+id/text_house_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20sp"
            android:text="House number"/>

        <TextView
            android:id="@+id/hidden_text_house_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/hidden_text_house_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>